<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mannykary.ultimatemusicsync"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mannykary.ultimatemusicsync.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mannykary.ultimatemusicsync.SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/Theme.AppCompat.Light"
            android:parentActivityName="com.mannykary.ultimatemusicsync.MainActivity" >
         	<meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="com.mannykary.ultimatemusicsync.MainActivity" />
        </activity>
    </application>

</manifest>
